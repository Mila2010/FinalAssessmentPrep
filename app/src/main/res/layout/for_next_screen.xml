<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/red_rec"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/from_bottom"
        >
     <TextView
         android:id="@+id/left_rec"
         android:layout_width="@dimen/jj_wrap_content"
         android:layout_height="@dimen/blue_rec_hight"
         android:layout_weight="1"
         android:background="@color/colorPrimary"
         android:layout_gravity="center"/>
        <TextView
            android:id="@+id/central_rec"
            android:layout_width="@dimen/jj_wrap_content_red"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/right_rec"
            android:layout_width="@dimen/jj_wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_height="@dimen/blue_rec_hight"
            android:layout_gravity="center"/>

    </LinearLayout>


</RelativeLayout>